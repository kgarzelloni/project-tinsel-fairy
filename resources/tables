CREATE TABLE user_info (
	user_id SERIAL PRIMARY KEY,
	email VARCHAR(90) NOT NULL, 
	password VARCHAR(30) NOT NULL
);

CREATE TABLE dbt_diary_data (
	diary_entry_id SERIAL PRIMARY KEY,
	diary_entry_date DATE NOT NULL,
	/*urges*/
	use_urge INT,
	su_urge INT,
	sh_urge INT,
	/*emotions*/
	misery_emotion_rating INT,
	anger_emotion_rating INT,
	anxiety_emotion_rating INT,
	abandonment_emotion_rating INT,
	shame_emotion_rating INT, 
	depression_emotion_rating INT,
	sadness_emotion_rating INT,
	joy_emotion_rating INT,
	/*drugs and alcohol*/
	number_of_drugs_and_medication INT,
	number_alcohol_drinks INT,
	type_of_alcohol_drinks VARCHAR(30),
	meds_as_prescribed VARCHAR(1),
	number_illicit_drugs INT,
	type_of_illicit_drugs VARCHAR(30),
	number_prn_or_otc_meds INT,
	type_of_prn_or_otc_meds VARCHAR(30),
	/*action*/
	sh_action VARCHAR(1),
	number_of_lies_action VARCHAR(1),
	used_skills_rating_action int,
	/*notes*/
	notes VARCHAR(250)
);

CREATE TABLE dbt_skills_ratings_data(
	/*mindfulness*/
	observe VARCHAR(1),
	describe VARCHAR(1),
	participate VARCHAR(1),
	non_judgemental VARCHAR(1),
	one_mindful VARCHAR(1),
	effective VARCHAR(1),
	/*emotion regulation*/
	reduce_vulnerabilities VARCHAR(1),
	build_mastery VARCHAR(1),
	build_positive_experiences VARCHAR(1),
	allow_emotions VARCHAR(1),
	opposite_action VARCHAR(1),
	check_the_facts VARCHAR(1),
	cope_ahead VARCHAR(1),
	problem_solve VARCHAR(1),
	self_validation VARCHAR(1),
	/*distress tolerance*/
	distract VARCHAR(1),
	self_soothe VARCHAR(1),
	urge_surf VARCHAR(1),
	half_smile VARCHAR(1),
	improve_the_moment VARCHAR(1),
	pros_and_cons VARCHAR(1),
	radical_acceptance VARCHAR(1),
	tipp VARCHAR(1),
	/*interpersonal effectiveness*/
	relationship_mindfulness VARCHAR(1),
	accurate_expression VARCHAR(1),
	dear_man VARCHAR(1),
	give VARCHAR(1),
	fast VARCHAR(1)
);

CREATE TABLE mindfulness_descriptions(
	observe VARCHAR(150),
	describe VARCHAR(150),
	participate VARCHAR(150),
	non_judgemental VARCHAR(150),
	one_mindful VARCHAR(150),
	effective VARCHAR(150)
);

CREATE TABLE emotion_regulation_descriptions(
	reduce_vulnerabilities VARCHAR(150),
	build_mastery VARCHAR(150),
	build_positive_experiences VARCHAR(150),
	allow_emotions VARCHAR(150),
	opposite_action VARCHAR(150),
	check_the_facts VARCHAR(150),
	cope_ahead VARCHAR(150),
	problem_solve VARCHAR(150),
	self_validation VARCHAR(150)
);

CREATE TABLE distress_tolerance_descriptions(
	distract VARCHAR(150),
	self_soothe VARCHAR(150),
	urge_surf VARCHAR(150),
	half_smile VARCHAR(150),
	improve_the_moment VARCHAR(150),
	pros_and_cons VARCHAR(150),
	radical_acceptance VARCHAR(150),
	tipp VARCHAR(150)
);

CREATE TABLE interpersonal_effectiveness_descriptions(
	relationship_mindfulness VARCHAR(1),
	accurate_expression VARCHAR(1),
	dear_man VARCHAR(1),
	give VARCHAR(1),
	fast VARCHAR(1)
);

/*use = drug use*/
/*su = suicide ideation*/
/*sh = self harm*/
/*prn = taking meds as needed, i.e. Xanax when feeling need to relax*/
/*used skills ratings:
	0 = Not thought about or used
	1 = Thought about, not used, didn't want to
	2 = Thought about, not used, wanted to
	3 = Tried but couldn't use them
	4 = Tried, could do them but they didn't help
	5 = Tried, could use them, helped
	6 = Didn't try, used them, didn't help
	7 = didn't try, used them, helped*/
	
